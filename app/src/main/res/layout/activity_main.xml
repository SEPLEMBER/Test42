<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/editor_background">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rust — Launcher"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp" />

    <!-- Кнопка: Editor (запускает EditorActivity) -->
    <Button
        android:id="@+id/btnEditor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Editor"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#1E88E5"
        android:layout_marginBottom="12dp" />

    <!-- Кнопка-заглушка 1 -->
    <Button
        android:id="@+id/btnPlaceholder1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Placeholder 1"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#43A047"
        android:layout_marginBottom="12dp" />

    <!-- Кнопка-заглушка 2 -->
    <Button
        android:id="@+id/btnPlaceholder2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Placeholder 2"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#F57C00" />

</LinearLayout>
