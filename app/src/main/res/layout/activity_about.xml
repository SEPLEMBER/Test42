<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Секция: Туториал -->
        <TextView
            android:id="@+id/tv_tutorial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_tutorial_title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_tutorial_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_tutorial_text"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:scrollHorizontally="false"
            android:breakStrategy="balanced"
            android:includeFontPadding="true"
            android:hyphenationFrequency="normal"
            android:paddingTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            <!-- only for API 26+; ignored on older -->
            android:justificationMode="inter_word" />

        <!-- Секция: Разработчики -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_developers_title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_developers_text"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Секция: Лицензия -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_license_title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_license_text"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</ScrollView>
