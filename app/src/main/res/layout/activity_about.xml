<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Секция: Туториал -->
        <TextView
            android:id="@+id/tv_tutorial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_tutorial_title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_tutorial_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_tutorial_text"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:scrollHorizontally="false"
            android:ellipsize="none"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:includeFontPadding="true"
            android:paddingTop="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:gravity="start|top" />

        <!-- Секция: Разработчики -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_developers_title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_developers_text"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:scrollHorizontally="false"
            android:ellipsize="none"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:includeFontPadding="true"
            android:gravity="start|top" />

        <!-- Секция: Лицензия -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_license_title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_license_text"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:scrollHorizontally="false"
            android:ellipsize="none"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:includeFontPadding="true"
            android:gravity="start|top" />
    </LinearLayout>

</ScrollView>
