<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/editor_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="@android:color/transparent" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#262626" />

        <!-- Stats row -->
        <TextView
            android:id="@+id/tvStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Words: 0 | Chars: 0"
            android:textColor="#BDBDBD"
            android:textSize="13sp" />

        <!-- Editor container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp">

            <EditText
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#E0E0E0"
                android:textColorHint="#BDBDBD"
                android:textSize="16sp"
                android:inputType="textMultiLine|textNoSuggestions"
                android:gravity="top|start"
                android:scrollbars="vertical"
                android:overScrollMode="ifContentScrolls"
                android:padding="8dp"
                android:lineSpacingExtra="2dp"
                android:importantForAutofill="no"
                android:hint="Start typing..." />

            <!-- Empty hint -->
            <TextView
                android:id="@+id/emptyHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empty document — use File → Open/Save"
                android:textColor="#9E9E9E"
                android:alpha="0.9"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>
    </LinearLayout>

    <!-- Jump zones -->
    <View
        android:id="@+id/jumpTop"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_gravity="top|end"
        android:background="@android:color/transparent"
        android:contentDescription="Jump to top"
        android:clickable="true"
        android:focusable="true" />

    <View
        android:id="@+id/jumpBottom"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Jump to bottom"
        android:clickable="true"
        android:focusable="true" />

    <!-- Overlay controls shown when user minimizes Find dialog -->
    <FrameLayout
        android:id="@+id/overlayControls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/overlayPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:textSize="20sp"
                android:padding="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center">

                <Button
                    android:id="@+id/overlayOpenFind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/overlayCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 matches"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <Button
                android:id="@+id/overlayNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&gt;"
                android:textSize="20sp"
                android:padding="12dp" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
