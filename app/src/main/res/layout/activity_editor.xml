<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/editor_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="@android:color/transparent" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#262626" />

        <!-- Stats row -->
        <TextView
            android:id="@+id/tvStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Words: 0 | Chars: 0"
            android:textColor="#BDBDBD"
            android:textSize="13sp" />

        <!-- Editor container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp">

            <!-- RecyclerView-based editor: efficient for very large files -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="ifContentScrolls"
                android:clipToPadding="false"
                android:padding="4dp" />

            <!-- Empty hint (overlay) -->
            <TextView
                android:id="@+id/emptyHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_hint"
                android:textColor="#9E9E9E"
                android:alpha="0.9"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <!-- Loading overlay for big files (shown while streaming into blocks) -->
            <FrameLayout
                android:id="@+id/loading_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="#80000000">

                <ProgressBar
                    android:id="@+id/loading_progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/loading_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="48dp"
                    android:text="Loadingâ€¦"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </FrameLayout>

        </FrameLayout>
    </LinearLayout>

    <!-- Jump zones -->
    <View
        android:id="@+id/jumpTop"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_gravity="top|end"
        android:background="@android:color/transparent"
        android:contentDescription="@string/jump_top"
        android:clickable="true"
        android:focusable="true" />

    <View
        android:id="@+id/jumpBottom"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/jump_bottom"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>
