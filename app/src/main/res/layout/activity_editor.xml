<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/editor_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@android:color/transparent" />

    <!-- Divider to visually separate toolbar and editor -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#262626" />

    <!-- Stats row -->
    <TextView
        android:id="@+id/tvStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Words: 0 | Chars: 0"
        android:textColor="#BDBDBD"
        android:textSize="13sp" />

    <!-- Editor container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <EditText
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="#E0E0E0"
            android:textColorHint="#BDBDBD"
            android:textSize="16sp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls"
            android:padding="8dp"
            android:lineSpacingExtra="2dp"
            android:importantForAutofill="no"
            android:hint="Start typing..." />

        <!-- Empty hint centered -->
        <TextView
            android:id="@+id/emptyHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty document — use File → Open/Save"
            android:textColor="#9E9E9E"
            android:alpha="0.9"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- Slim vertical scroll thumb on right side -->
        <View
            android:id="@+id/scrollThumb"
            android:layout_width="24dp"
            android:layout_height="120dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="4dp"
            android:background="#424242"
            android:alpha="0.9"
            android:padding="4dp" />

    </FrameLayout>
</LinearLayout>
